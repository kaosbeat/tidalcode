once $ ccn 1 # ccv 0 # s "midi" # midichan 3 -- off 0
once $ ccn 2 # ccv 0 # s "midi" # midichan 3 -- rendermode center
once $ ccn 2 # ccv 1 # s "midi" # midichan 3 -- rendermode cube




-- lines midichan 4
