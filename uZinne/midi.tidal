once $ ccn 3 # ccv 1 # s "midi" # midichan 4 -- ttl
once $ ccn 4 # ccv 126 # s "midi" # midichan 4 -- ttlspeed
once $ ccn 5 # ccv 12 # s "midi" # midichan 4 -- strokeweight
once $ ccn 6 # ccv 50 # s "midi" # midichan 4 -- size


